<div class="bg-gray-100">

  <h1 class="text-3xl py-8 font-semibold text-center text-gray-800 capitalize lg:text-4xl dark:text-white drop-shadow-2xl">Showrooms</h1>
  <% @showrooms.each do |showroom| %>

    <div class="container px-6 py-3 mx-auto">
      <div class="relative flex flex-col-reverse py-3 lg:py-0 lg:flex-col border border-grey-900 rounded shadow-lg mb-6">
        <div class="w-full max-w-xl px-4 mx-auto md:px-0 lg:px-8 lg:py-2 lg:max-w-screen-xl">
          <div class="lg:max-w-lg text-left py-4">
            <h1 class="font-sans font-bold text-gray-900 text-left">
              Showroom <%= showroom.name %>
            </h1>
            <h5 class="text-gray-700">
              Adress: <%= showroom.adress %>
            </h5>
            <h6>Phone: <%= showroom.phone %></h6>
            <h4>Mobile: <%= showroom.mobile %></h4>
            <h5>Email: <%= showroom.email %></h5>
          </div>
          <div>
            <iframe width="48%" height="100%" class="inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src=<%= showroom.geolocation %>  style="border:0;" allowfullscreen="" loading="lazy"></iframe>
          </div>
        </div>
        <div class="inset-y-0 top-0 right-0 w-full max-w-xl px-4 mx-auto mb-6 md:px-0 lg:pl-8 lg:pr-0 lg:mb-0 lg:mx-0 lg:w-1/2 lg:max-w-full lg:absolute xl:px-0">
          <img
            class="object-cover w-full h-56 rounded shadow-lg md:h-96 lg:h-full"
            src=<%= showroom.image_url %>
            alt=""
          />
        </div>
      </div>
    </div>

  <% end %>
</div>




