<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <div class="lg:flex lg:items-center">
            <div class="w-full space-y-12 lg:w-1/2 ">
                <div>
                    <div class="text-gray-500 text-m">
                      <%= link_to "home", root_path %> >
                      <%= link_to @category.category_name , category_path(id: @category.id)  %> >
                      <%= link_to @product.subcategory.name , subcategory_path(id: @product.subcategory.id)  %> >
                      <%= @product.product_name %>
                    </div>

                    <div class="mt-2">
                        <span class="inline-block w-40 h-1 rounded-full bg-blue-500"></span>
                        <span class="inline-block w-3 h-1 ml-1 rounded-full bg-blue-500"></span>
                        <span class="inline-block w-1 h-1 ml-1 rounded-full bg-blue-500"></span>
                    </div>
                </div>
                <div>
                    <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"><%= @product.product_name %></h1>

                    <div class="mt-2">
                        <span class="inline-block w-40 h-1 rounded-full bg-blue-500"></span>
                        <span class="inline-block w-3 h-1 ml-1 rounded-full bg-blue-500"></span>
                        <span class="inline-block w-1 h-1 ml-1 rounded-full bg-blue-500"></span>
                    </div>
                </div>

                <div class="md:flex md:items-start md:-mx-4">
                    <div class="mt-4 md:mx-4 md:mt-0">
                        <h1 class="text-2xl font-semibold text-gray-700 capitalize dark:text-white">Price: <%= number_to_currency(@product.price, unit: "â‚¬", precision: 0, format: "%n %u") %></h1>
                    </div>
                </div>

                <div class="md:flex md:items-start md:-mx-4">
                    <div class="mt-4 md:mx-4 md:mt-0">
                        <h1 class="text-2xl font-semibold text-gray-700 capitalize dark:text-white">Dimensions: <%= @product.dimensions %></h1>
                    </div>
                </div>
            </div>

            <div class="lg:flex lg:items-center lg:w-1/2 lg:justify-center">
              <% if @product.image.attached? %>
                <%= image_tag(@product.image, class: "w-[28rem] h-[28rem] object-cover xl:w-[34rem] xl:h-[34rem]") %>
              <% else %>
                <%= image_tag("no_image.jpg", class: "w-[28rem] h-[28rem] object-cover xl:w-[34rem] xl:h-[34rem]") %>
              <% end %>
            </div>
        </div>


    </div>
</section>
